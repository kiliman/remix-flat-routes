{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES2019",
    "module": "ES2020",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "importHelpers": true
  },
  "exclude": ["node_modules", "test"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/index.test.ts"]
}
